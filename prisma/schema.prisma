generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// cada tabela do banco de dados
model Trip {
  id String @id @default(uuid()) // unico id 
  destination String 
  starts_at DateTime
  ends_at DateTime
  is_confirmed Boolean @default(false)
  created_at DateTime @default(now())

  participants Participant[]
  activities Activity[]
  links Link[]

  @@map("trips")
}

model Participant {
  id String @id @default(uuid()) // unico id 
  name String?
  email String
  is_confirmed Boolean @default(false)
  is_owner Boolean @default(false)
  trip_id String
  
  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("participants")
}

model Activity {
  id String @id @default(uuid()) // unico id 
  title String
  occurs_at DateTime
  trip_id String
  
  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("activities")
}

model Link {
  id String @id @default(uuid()) // unico id 
  title String
  url String
  trip_id String
  
  trip Trip @relation(fields: [trip_id], references: [id])


  @@map("links")
}